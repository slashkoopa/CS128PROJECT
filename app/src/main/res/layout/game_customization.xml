<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        android:layout_weight="1"
        android:text="@string/number_of_rounds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/round_1"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="@string/_1"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/round_2"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/_2"
        app:layout_constraintStart_toEndOf="@+id/round_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/round_3"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/_3"
        app:layout_constraintStart_toEndOf="@+id/round_2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/round_4"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/_4"
        app:layout_constraintStart_toEndOf="@+id/round_3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/round_5"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/_5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/round_1" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="152dp"
        android:text="@string/player_1_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        android:text="@string/player_2_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <Button
        android:id="@+id/p1_red"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/player1"
        app:layout_constraintStart_toEndOf="@+id/player1"
        app:layout_constraintTop_toTopOf="@+id/player1" tools:targetApi="lollipop"/>

    <Button
        android:id="@+id/p1_blue"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#0000FF"
        app:layout_constraintStart_toEndOf="@+id/p1_red"
        app:layout_constraintTop_toTopOf="@+id/p1_red" />

    <Button
        android:id="@+id/p1_brown"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#D2691E"
        app:layout_constraintStart_toEndOf="@+id/p1_blue"
        app:layout_constraintTop_toTopOf="@+id/p1_blue" />

    <Button
        android:id="@+id/p1_green"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#00FF00"
        app:layout_constraintStart_toEndOf="@+id/p1_brown"
        app:layout_constraintTop_toTopOf="@+id/p1_brown" />

    <Button
        android:id="@+id/p2_red"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/player2"
        app:layout_constraintStart_toEndOf="@+id/player2"
        app:layout_constraintTop_toTopOf="@+id/player2" />

    <Button
        android:id="@+id/p2_blue"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#0000FF"
        app:layout_constraintStart_toEndOf="@+id/p2_red"
        app:layout_constraintTop_toTopOf="@+id/p2_red" />

    <Button
        android:id="@+id/p2_brown"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#D2691E"
        app:layout_constraintStart_toEndOf="@+id/p2_blue"
        app:layout_constraintTop_toTopOf="@+id/p2_blue" />

    <Button
        android:id="@+id/p2_green"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#00FF00"
        app:layout_constraintStart_toEndOf="@+id/p2_brown"
        app:layout_constraintTop_toTopOf="@+id/p2_brown" />
</android.support.constraint.ConstraintLayout>
